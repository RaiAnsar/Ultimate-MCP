# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Force LF for specific file types (cross-platform consistency)
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.svg text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
LICENSE text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf

# Force CRLF for Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.mp3 binary
*.mp4 binary
*.webm binary
*.ogg binary
*.wav binary
*.flac binary

# Node modules (if accidentally committed)
node_modules/**/* binary

# Lock files should be preserved exactly
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf